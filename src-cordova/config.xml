<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ikkarus.lembreme" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LembreMe</name>
    <description>Um aplicativo que funciona como um bloco de anotações prático</description>
    <author email="bene.rogerio@hotmail.com" href="">
        Ikkarus
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <!-- <allow-navigation href="192.168.56.*" /> -->
    <engine name="android" />
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <resource-file src="res/android/colors.xml" target="/app/src/main/res/android/colors.xml" />
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <preference name="BackgroundColor" value="0xff000000"/>
    <preference name="ShowTitle" value="true"/>
    <preference name="LoadingDialog" value="LembreMe, Bloco de anotações"/>
</widget>
